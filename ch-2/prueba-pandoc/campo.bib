@article{mendozaReadingSimonBolivar2017,
	title = {Reading {Simón} {Bolívar}'s {Delirium}: {Messianism} and its {Publics}},
	volume = {132},
	issn = {1080-6598},
	shorttitle = {Reading {Simón} {Bolívar}'s {Delirium}},
	url = {https://muse.jhu.edu/article/656913},
	doi = {10.1353/mln.2017.0018},
	language = {en},
